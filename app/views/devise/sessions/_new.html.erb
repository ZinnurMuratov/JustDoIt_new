<div class="reveal" id="log_in" data-reveal>
    <h2>Log in</h2>


    <div class ='formerrors'></div>
    <br>
  <%= simple_form_for(resource, as: resource_name,html: {:id => "sign_in"}, remote: true, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <%= f.input :login, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
 </div>


